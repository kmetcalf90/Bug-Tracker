@model IEnumerable<WebApplication7.Models.ApplicationUser>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>
        </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("View User Roles", "UserRolesList", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit User Roles", "EditUserRoles", new { id = item.Id }, new { @class = "btn btn-info" })
                </td>

            </tr>
            
        </tbody>

    }
</table>
@section scripts {
    <script>
    $(document).ready(function () {
        // format ALL tables by class selector
        $('.table').DataTable();
    });
    </script>
}